<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="70dp"
    tools:context=".MainActivity"
    tools:showIn="@layout/photos_search_bar">

    <include
        android:id="@+id/photos_search_bar"
        layout="@layout/photos_search_bar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/photos_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:paddingBottom="60dp"
        app:layout_constraintStart_toStartOf="@id/photos_search_bar"
        app:layout_constraintTop_toTopOf="@id/photos_search_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>