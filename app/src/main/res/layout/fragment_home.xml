<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">

    <include
        android:id="@+id/include"
        layout="@layout/map_widget"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        layout="@layout/main_weather_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:elevation="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/new_trip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#545454"
        android:drawableRight="@drawable/ic_outline_arrow_circle_right_24"
        android:elevation="30dp"
        android:fontFamily="@font/nunito_extrabold"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:text="NEW TRIP"
        android:textSize="25sp"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/go_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        app:cornerRadius="15dp"
        android:elevation="30dp"
        android:backgroundTint="#545454"
        android:drawableRight="@drawable/ic_outline_arrow_circle_right_24"
        android:text="Go"
        android:textSize="25sp"
        android:fontFamily="@font/nunito_extrabold"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/new_trip_button"
        app:layout_constraintEnd_toStartOf="parent"/>

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#545454"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        app:cornerRadius="15dp"
        android:elevation="30dp"
        android:text="Cancel"
        android:textSize="25sp"
        android:fontFamily="@font/nunito_extrabold"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/new_trip_button"
        app:layout_constraintRight_toLeftOf="@+id/go_button" />

    <View
        android:id="@+id/notification_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/trip_name_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:paddingTop="10dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        app:cornerRadius="15dp"
        android:elevation="10dp"
        android:hint="TRIP NAME"
        android:textSize="25sp"
        android:fontFamily="@font/nunito_medium"
        android:background="@drawable/edit_text_border"
        android:backgroundTint="@color/white"
        android:textColor="@color/darkgrey"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/new_trip_button"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>